<h1>Edit {{course.name}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" type="text" name="name" value="{{course.name}}" class="validate" required>
    <label for="title">Courses Name</label>
    <span class="helper-text" data-error="Enter course name" data-success=""></span>
  </div>
  <div class="input-field">
    <input id="price" type="number" name="price"  value="{{course.price}}" class="validate" required min="1">
    <label for="price">Courses Price</label>
    <span class="helper-text" data-error="Enter course price" data-success=""></span>
  </div>
  <div class="input-field">
    <input id="img" type="text" name="url"  value="{{course.url}}" class="validate" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter course image" data-success=""></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}"> 

  <button type="submit" class="btn btn-primary">Edit Course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}"> 
  <input type="hidden" name="id" value="{{course.id }}">
  <button type="submit" class="btn red">Delete Course</button>
</form>